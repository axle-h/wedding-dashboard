@using Axh.Wedding.Application.ViewModels.Account
@using Axh.Wedding.Application.ViewModels.Page
@using Axh.Wedding.Mvc.Infrastructure.Helpers
@using Axh.Wedding.Resources
@model Axh.Wedding.Application.ViewModels.Home.InformationPageViewModel


<div class="container margin-bottom">
    <div class="row">
        <div class="col-md-12">
            <p>@Html.Raw(Resources.Rsvp_Date_Wordy), @Html.Raw(Resources.Rsvp_Time_Wordy)</p>
                
            <div class="formal">
                @Html.Raw(Resources.WeddingPartyMember_Bride) @Html.Raw(Resources.WeddingPartyMember_Bride_Surname) & @Html.Raw(Resources.WeddingPartyMember_Groom) @Html.Raw(Resources.WeddingPartyMember_Groom_Surname)
            </div>

            <p>@Html.Raw(Resources.InformationPage_Introduction_1) at @Html.Raw(Resources.Rsvp_Venue), @Html.Raw(Resources.Rsvp_Venue_Location)</p>

            <p>
                @if (Model.User.RsvpType == RsvpType.Evening)
                {
                    @Html.Raw(Resources.InformationPage_Introduction_Evening)
                }
                else
                {
                    @Html.Raw(Resources.InformationPage_Introduction_Day)
                }
            </p>
        </div>
    </div>
</div>


<div class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <p>
                    @Html.FormatAddress(m => m.VenueAddress, m => m.VenuePhone)
                </p>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12 bg-light">
    <div id="map-canvas-venue" class="map-canvas"></div>
</div>

<div class="col-md-12 bg-light margin-bottom-large">
    @Html.Partial(MVC.Shared.Views._SectionHeading, new HeaderImageViewModel { Url = Links.Content.Images.hotel_jpg, Title = Resources.InformationPage_Hotels_Title })
</div>

<div class="container margin-bottom-large">
    <div class="row">
        <div class="col-md-12">
            <p>@Html.Raw(Resources.InformationPage_Hotels_1)</p>
            <p>@Html.Raw(Resources.InformationPage_Hotels_2)</p>
            <p>@Html.Raw(Resources.InformationPage_Hotels_3)</p>
        </div>
    </div>
</div>

<div class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <p>
                    @Html.FormatAddress(m => m.HotelAddress, m => m.HotelPhone)
                </p>
            </div>
        </div>
    </div>
</div>

<div class="bg-light col-md-12">
    <div id="map-canvas-hotel" class="map-canvas"></div>
</div>



<div class="bg-light col-md-12 margin-bottom-large">
